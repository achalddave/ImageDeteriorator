<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:left="50dp"
        android:right="50dp"
        android:top="50dp"
        android:bottom="50dp">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval"
            android:useLevel="false" >
            <padding
                android:bottom="20dp"
                android:left="40dp"
                android:right="40dp"
                android:top="40dp" />

            <size
                android:height="40dp"
                android:width="40dp" />

            <stroke
                android:dashGap="8dp"
                android:dashWidth="3dp"
                android:width="5dp"
                android:color="#999999" />

            <solid android:color="@android:color/transparent" />
        </shape>
    </item>

</layer-list>